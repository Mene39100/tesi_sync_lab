#!/bin/bash
set -e
ip addr add 10.0.10.2/24 dev eth0
ip addr add 10.0.20.1/24 dev eth1
ip link set eth0 up
ip link set eth1 up
echo "nameserver 8.8.8.8" > /etc/resolv.conf

apt update -y
apt install -y linuxptp

# Configurazione PTP (Boundary Clock)
cat > /etc/ptp/bc.conf << 'EOF'
[global]
twoStepFlag 1
domainNumber 24
delay_mechanism E2E
[eth0]
[eth1]
EOF
