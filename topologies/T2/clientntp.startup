#!/bin/bash
set -e
ip addr add 10.0.20.2/24 dev eth0
ip link set eth0 up
echo "nameserver 8.8.8.8" > /etc/resolv.conf

apt update -y
apt install -y ntpsec

# Configurazione NTPsec (client)
cat > /etc/ntpsec/ntp.conf << 'EOF'
server 10.0.20.1 iburst
driftfile /var/lib/ntpsec/ntp.drift
EOF
service ntp restart
