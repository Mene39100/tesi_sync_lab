ip addr add 10.0.10.4/24 dev eth0
ip link set eth0 up
echo "nameserver 8.8.8.8" > /etc/resolv.conf

# Hosts
cat >> /etc/hosts <<'EOF'
10.0.10.1 servergm
10.0.10.4 serverntp
10.0.10.2 boundary0
10.0.20.1 boundary1
10.0.10.3 clientchrony
10.0.20.2 clientntp
10.0.20.3 clientptp
EOF

# Installa NTPsec
apt update -y
apt install -y ntpsec

# Configurazione NTPsec (server principale)
cp /tesi_sync_lab/configs/ntp/server_ntp.conf /etc/ntpsec/ntp.conf

# Avvio del demone
pkill ntpd 2>/dev/null
sleep 2
/usr/sbin/ntpd -g -c /etc/ntpsec/ntp.conf &
